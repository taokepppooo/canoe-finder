{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "@unocss",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "prettier/prettier": ["error", {
      "trailingComma": "all"
    }],
    "comma-dangle": "off"
  },
  "parserOptions": {
    "tsconfigRootDir": ".",
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  }
}
