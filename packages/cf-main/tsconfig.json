{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["DOM", "ES2017"],
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
